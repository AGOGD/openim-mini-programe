/* 消息项组件样式 */
.message-item {
  display: flex;
  margin-bottom: 32rpx;
  padding: 0 24rpx;
}

.message-item.self {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.content-wrap {
  max-width: 65%;
  margin: 0 16rpx;
}

.sender-name {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.bubble-wrap {
  display: flex;
  align-items: flex-end;
}

.self .bubble-wrap {
  flex-direction: row-reverse;
}

/* 气泡基础样式 */
.bubble {
  padding: 20rpx 24rpx;
  background-color: #fff;
  border-radius: 8rpx;
  word-break: break-all;
  line-height: 1.5;
}

.self .bubble {
  background-color: #007AFF;
  color: #fff;
}

/* 文本消息 */
.text-bubble {
  font-size: 30rpx;
}

/* 图片消息 */
.image-bubble {
  padding: 8rpx;
  max-width: 400rpx;
}

.image-bubble image {
  max-width: 100%;
  border-radius: 4rpx;
}

/* 语音消息 */
.voice-bubble {
  display: flex;
  align-items: center;
  min-width: 120rpx;
}

.voice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.voice-bubble.playing .voice-icon {
  animation: voice-playing 1s infinite;
}

@keyframes voice-playing {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

/* 视频消息 */
.video-bubble {
  position: relative;
  padding: 0;
  width: 300rpx;
  height: 400rpx;
  overflow: hidden;
}

.video-bubble image:first-child {
  width: 100%;
  height: 100%;
}

.video-bubble .play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
}

/* 位置消息 */
.location-bubble {
  padding: 0;
  width: 400rpx;
  overflow: hidden;
}

.location-name {
  display: block;
  padding: 16rpx;
  font-size: 28rpx;
}

.location-bubble image {
  width: 100%;
  height: 200rpx;
}

/* 状态图标 */
.status {
  display: flex;
  align-items: flex-end;
  margin: 0 8rpx;
}

.status-icon {
  width: 32rpx;
  height: 32rpx;
}

.unsupported {
  color: #999;
  font-size: 26rpx;
}
