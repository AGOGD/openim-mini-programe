/* 个人中心样式 */
.profile-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 用户卡片 */
.user-card {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
}

.user-card .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.user-card .info {
  flex: 1;
}

.user-card .name {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.user-card .id {
  font-size: 26rpx;
  color: #999;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 菜单列表 */
.menu-list {
  background-color: #fff;
  margin-bottom: 16rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.menu-item image:first-child {
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
}

.menu-item text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

/* 退出按钮 */
.logout-btn {
  margin: 60rpx 32rpx;
  height: 88rpx;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn text {
  font-size: 32rpx;
  color: #FF3B30;
}

.logout-btn:active {
  background-color: #f5f5f5;
}
