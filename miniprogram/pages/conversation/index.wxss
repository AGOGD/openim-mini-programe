/* 会话列表样式 */
.conversation-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索栏 */
.search-bar {
  padding: 16rpx 24rpx;
  background-color: #fff;
}

.search-input {
  display: flex;
  align-items: center;
  height: 64rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
}

.placeholder {
  color: #999;
}

/* 会话列表 */
.conversation-list {
  flex: 1;
  background-color: #fff;
}

.conversation-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.conversation-item:active {
  background-color: #f5f5f5;
}

/* 头像 */
.avatar-wrap {
  position: relative;
  margin-right: 24rpx;
}

.avatar-wrap .badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
}

/* 内容 */
.content {
  flex: 1;
  overflow: hidden;
}

.top-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.name {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}

.bottom-row {
  display: flex;
  align-items: center;
}

.message {
  flex: 1;
  font-size: 26rpx;
}

.mute-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 8rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
}

.empty text {
  color: #999;
  font-size: 28rpx;
}
