/* 登录页样式 */
.login-page {
  min-height: 100vh;
  background-color: #fff;
  padding: 0 48rpx;
  display: flex;
  flex-direction: column;
}

/* Logo区域 */
.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 160rpx;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 表单区域 */
.form-area {
  flex: 1;
}

.input-item {
  margin-bottom: 32rpx;
}

.input-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input-item input {
  height: 96rpx;
  padding: 0 24rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.login-btn {
  margin-top: 48rpx;
  height: 96rpx;
  background-color: #007AFF;
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn:active {
  background-color: #0066DD;
}

/* 底部 */
.footer {
  padding: 48rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.footer .link {
  color: #007AFF;
}
